---
import Layout from '../layouts/Layout.astro'
import ShapeMorph from '../components/ShapeMorph'
---

<Layout title="ET's studio">
  <main>
    <div class="relative z-10 ml-[50%]">
      <h1
        class="absolute top-[14rem] right-[max(-1.5rem,-1vw)] animate-breath text-right text-[min(12rem,20vw)] font-bold leading-[min(9.5rem,20vw)]"
      >
        Ericsen
        <br />
        Tsai
      </h1>
    </div>
    <div class="relative z-0 md:ml-[50%]">
      <ShapeMorph client:only="react" ratio={1.5} shortSideSize={1000} />
    </div>
  </main>
</Layout>

<style>
  main {
    width: 100%;
    height: 100vh;
    overflow: hidden;
  }
</style>
