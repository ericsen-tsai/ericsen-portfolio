---
import Layout from '../layouts/Layout.astro'
import ShapeMorph from '../components/ShapeMorph'
---

<Layout title="ET's studio">
  <main class="relative h-screen w-full overflow-hidden">
    <div class="relative z-10 ml-[50%]">
      <h1
        class="absolute top-[14rem] right-[max(-1.5rem,-1vw)] animate-breath text-right text-[min(12rem,20vw)] font-black leading-[min(9.5rem,20vw)]"
      >
        Ericsen
        <br />
        Tsai
      </h1>
    </div>
    <div class="relative z-0 hidden md:ml-[50%] md:inline-block">
      <ShapeMorph client:only="react" ratio={1.5} shortSideSize={1000} />
    </div>
    <div class="absolute top-[5rem] left-[30%] z-0 md:hidden">
      <ShapeMorph client:only="react" ratio={1} shortSideSize={500} />
    </div>
  </main>
</Layout>

